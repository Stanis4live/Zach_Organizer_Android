#:import my_base my_base

<LoginScreen>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            source: "icons/login/zach_back.png"
            size: root.width, root.height
            pos: self.pos

    FloatLayout:

        Image:
            size_hint: .3, .1
            pos_hint: {"top": .9, "right": .66}
            source: "icons/login/logo.png"

        TextInput:
            id: login_email
            multiline: False
            hint_text: 'email'
            valign: 'middle'
            background_color: (0,0,0,1)
            foreground_color: (1, 1, 1, 1)
            size_hint: .9, .08
            pos_hint: {'top': .7, 'right': .95}
        TextInput:
            id: login_password
            multiline: False
            password: True
            hint_text: 'password'
            valign: 'middle'
            background_color: (0,0,0,1)
            foreground_color: (1, 1, 1, 1)
            size_hint: .9, .08
            pos_hint: {'top': .6, 'right': .95}


        CheckBox:
            id: show_password
            name: 'show_password'
            size_hint: .1, .1
            pos_hint: {"top": .52, "right": .12}
            active: False
            on_active:
                my_base.password_visibility(state=self.active, action='login')

        Label:
            font_name: 'fonts/Nunito-Bold.ttf'
            text: 'show password'
            color: (1, 1, 1, 1)
            size_hint: .3, .1
            pos_hint: {'top': .52, 'right': .45}


        ImageButton:
            id: login_button
            source: "icons/login/login_white.png"
            size_hint: .14, .1
            pos_hint: {'top': .44, 'right': .2}
            on_release:
                self.source = "icons/login/login_blue.png"
                app.my_base.login(login_email.text, login_password.text)

        ImageButton:
            id: forgot_button
            source: "icons/login/forgot_white.png"
            size_hint: .47, .1
            pos_hint: {'top': .439, 'right': .87}
            on_release:
                self.source = "icons/login/forgot_blue.png"
                app.change_screen('login_recovery_screen')
                app.root.ids['login_recovery_screen'].ids['login_email'].text = login_email.text

        ImageButton:
            id: sign_up_button
            source: "icons/login/sign_up_white.png"
            size_hint: .18, .1
            pos_hint: {'top': .35, 'right': .23}
            on_release:
                self.source = "icons/login/sign_up_blue.png"
                app.change_screen('sign_up_screen')

        Label:
            font_name: 'fonts/Nunito-Bold.ttf'
            text: '<- Simple and fast registration'
            color: (1, 1, 1, 1)
            size_hint: .8, .1
            pos_hint: {'top': .35, 'right': 1}

        Label:
            id: login_message
            font_name: 'fonts/Nunito-Bold.ttf'
            color: (.72, .39, 0, 1)
            size_hint: .8, .1
            pos_hint: {'top': .17, 'right': .9}

