#:import settings settings

<LoginRecoveryScreen>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            source: "icons/login/zach_back.png"
            size: root.width, root.height
            pos: self.pos

    FloatLayout:

        FloatLayout:
            size_hint: 1, .12
            pos_hint: {"top": 1, "right": 1}

            FloatLayout:
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    Rectangle:
                        source: "icons/events/panel.png"
                        size: self.width, self.height
                        pos: self.pos
                size_hint: .17, 1
                pos_hint: {"top": 1, "right": .18}

                ImageButton:
                    size_hint: .5, .5
                    pos_hint: {"top": .75, "right": .8}
                    source: "icons/events/back_arrow.png"
                    on_release:
                        app.change_screen('login_screen')

            FloatLayout:
                canvas.before:
                    Color:
                        rgba: (1, 1, 1, 1)
                    Rectangle:
                        source: "icons/events/panel.png"
                        size: self.width, self.height
                        pos: self.pos
                size_hint: .81, 1
                pos_hint: {"top": 1, "right": 1}

        Image:
            size_hint: .28, .1
            pos_hint: {"top": .8, "right": .66}
            source: "icons/login/logo.png"

        TextInput:
            id: login_email
            hint_text: 'email'
            valign: 'middle'
            background_color: (0,0,0,1)
            foreground_color: (1, 1, 1, 1)
            size_hint: .9, .08
            pos_hint: {'top': .6, 'right': .95}

        Label:
            id: login_message
            font_name: 'fonts/Nunito-Bold.ttf'
            color: (.72, .39, 0, 1)
            size_hint: .8, .1
            pos_hint: {'top': .2, 'right': .9}

        ImageButton:
            id: refresh_button
            source: "icons/login/refresh_white.png"
            size_hint: .4, .1
            pos_hint: {'top': .52, 'right': .47}
            on_release:
                self.source = "icons/login/refresh_blue.png"
                settings.reset_password(login_email.text)



